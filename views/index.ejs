<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <link rel="stylesheet" href="/stylesheets/font.css" />
        <link rel="stylesheet" href="/stylesheets/index.css" />
    </head>
    <body>
        <header>
            <h1><%= title %></h1>
            <div class="refs">
                <a href="/login" id="loginLink">login</a>
                <a href="/signup" id="sinupLink">signup</a>
            </div>
        </header>
        <div class="messages">
            <% message.forEach((msg) => { %>
                <div class="msg">
                    <div class="topSec">
                        <div class="user">
                            <img id="userIcon" src="/images/user.png" alt="">
                            <h3 class="usr">Login to see who wrote this message</h3>
                        </div>
                        <div class="title"><h2><%= msg.title %></h2></div>
                        <div class="usrMsg">
                            <%= msg.message %>
                        </div>
                    </div> 
                </div>
            <% }) %>
        </div>
    </body>
</html>
