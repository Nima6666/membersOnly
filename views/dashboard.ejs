<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/stylesheets/font.css" />
        <link rel="stylesheet" href="/stylesheets/dashboard.css" />
        <script src="/scripts/dashboard.js" defer></script>
        <title>Dashboard</title>
    </head>
    <body>
        <header>
            <h2 style="font-weight: bold;">welcome <%=user%></h2>
            <div class="rside">
                <button>Become a Member</button>
                <a href="/logout">logout</a>
                <button id="formOpener">add message</button>
            </div>
        </header>
        <div>
            <div class="panel">
                <form action="dashboard/message-post" id="postMessageForm" method="post">
                    <h1>add a new Message</h1>
                    <label for="title">Enter Title of your Message
                        <input type="text" name="title" id="title">
                    </label>
                    <label for="message">Enter Title of your Message
                        <input type="text" name="message" id="message">
                    </label>
                    <button id="addMessageBTN">add message</button>
                    <img src="/images/close.png" id="cross" alt="">
                </form>
            </div>
            <div class="messages">
                <% message.forEach((msg) => { %>
                    <div class="msg">
                        <div class="topSec">
                            <div class="user">
                                <img id="userIcon" src="/images/user.png" alt="">
                                <h3 class="usr"><%= msg.user %></h3>
                            </div>
                            <div class="title"><h2><%= msg.title %></h2></div>
                            <div class="usrMsg">
                                <%= msg.message %>
                            </div>
                            <div class="date">Posted on <%= msg.time %></div>
                        </div> 
                        <div class="likesComment">
                            likecomment
                        </div>
                    </div>
                <% }) %>
            </div>            
        </div>
    </body>
</html>
